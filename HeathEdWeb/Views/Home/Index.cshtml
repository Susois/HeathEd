@model HomeViewModel
@{
    ViewData["Title"] = "Trang chủ - HeathEd";
}

<div class="container-fluid px-4 mt-4">
    <div class="text-center mb-5">
        <h1 class="display-5 mb-3">Hệ thống Quản lý Giáo dục Y tế</h1>
        <p class="lead text-muted">Health Education Management System</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Sinh viên</h6>
                            <h3 class="mb-0">@Model.TotalStudents</h3>
                        </div>
                        <div>
                            <i class="bi bi-people-fill" style="font-size: 2.5rem; opacity: 0.7;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Giảng viên</h6>
                            <h3 class="mb-0">@Model.TotalLecturers</h3>
                        </div>
                        <div>
                            <i class="bi bi-person-badge-fill" style="font-size: 2.5rem; opacity: 0.7;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Môn học</h6>
                            <h3 class="mb-0">@Model.TotalModules</h3>
                        </div>
                        <div>
                            <i class="bi bi-book-fill" style="font-size: 2.5rem; opacity: 0.7;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Ca bệnh</h6>
                            <h3 class="mb-0">@Model.TotalCases</h3>
                        </div>
                        <div>
                            <i class="bi bi-clipboard2-pulse-fill" style="font-size: 2.5rem; opacity: 0.7;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Modules and Cases -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-book"></i> Môn học mới nhất</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentModules.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 100px;">Mã môn</th>
                                        <th>Tên môn học</th>
                                        <th class="d-none d-md-table-cell">Giảng viên</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var module in Model.RecentModules)
                                    {
                                        <tr>
                                            <td><strong>@module.ModuleCode</strong></td>
                                            <td>@module.ModuleName</td>
                                            <td class="d-none d-md-table-cell">
                                                <small>@module.Lecturer?.FullName</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-3">
                            <p class="text-muted mb-0">Chưa có môn học nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard2-pulse"></i> Ca bệnh mới nhất</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentCases.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var caseStudy in Model.RecentCases)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@caseStudy.CaseTitle</h6>
                                        <small class="text-muted">@caseStudy.Module?.ModuleCode</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(caseStudy.Description))
                                    {
                                        <p class="mb-1 text-muted small">
                                            @(caseStudy.Description.Length > 100
                                                ? caseStudy.Description.Substring(0, 100) + "..."
                                                : caseStudy.Description)
                                        </p>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Chưa có ca bệnh nào.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-grid-3x3-gap"></i> Liên kết nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <a href="/Users" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-people-fill d-block mb-2" style="font-size: 2rem;"></i>
                                <span class="d-block">Người dùng</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/Modules" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-book-fill d-block mb-2" style="font-size: 2rem;"></i>
                                <span class="d-block">Môn học</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/CaseStudies" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-clipboard2-pulse-fill d-block mb-2" style="font-size: 2rem;"></i>
                                <span class="d-block">Ca bệnh</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="http://localhost:5001/api/users" target="_blank" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-cloud-arrow-down-fill d-block mb-2" style="font-size: 2rem;"></i>
                                <span class="d-block">API Docs</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
