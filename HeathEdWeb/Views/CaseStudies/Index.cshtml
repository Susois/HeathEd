@model IEnumerable<CaseStudy>
@{
    ViewData["Title"] = "Quản lý Ca bệnh";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <h1 class="mb-3 mb-md-0"><i class="bi bi-clipboard2-pulse-fill"></i> Quản lý Ca bệnh</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Thêm ca bệnh mới
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row g-3">
                    @foreach (var caseStudy in Model)
                    {
                        <div class="col-12 col-md-6 col-xl-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-warning">
                                    <h6 class="mb-1 text-truncate" title="@caseStudy.CaseTitle">
                                        @caseStudy.CaseTitle
                                    </h6>
                                    <small class="text-muted d-block text-truncate">
                                        <i class="bi bi-book"></i> @caseStudy.Module?.ModuleCode - @caseStudy.Module?.ModuleName
                                    </small>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(caseStudy.Description))
                                    {
                                        <p class="card-text small mb-2">
                                            <strong>Mô tả:</strong><br />
                                            <span class="text-muted">
                                                @(caseStudy.Description.Length > 100
                                                    ? caseStudy.Description.Substring(0, 100) + "..."
                                                    : caseStudy.Description)
                                            </span>
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(caseStudy.Symptoms))
                                    {
                                        <p class="card-text text-info small mb-0">
                                            <strong><i class="bi bi-thermometer"></i> Triệu chứng:</strong><br />
                                            <span>
                                                @(caseStudy.Symptoms.Length > 80
                                                    ? caseStudy.Symptoms.Substring(0, 80) + "..."
                                                    : caseStudy.Symptoms)
                                            </span>
                                        </p>
                                    }
                                </div>
                                <div class="card-footer bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@caseStudy.CreatedDate.ToString("dd/MM/yyyy")</small>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@caseStudy.CaseID" class="btn btn-info" title="Xem">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@caseStudy.CaseID" class="btn btn-warning" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@caseStudy.CaseID" class="btn btn-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <p class="text-muted mt-4">Tổng số: <strong>@Model.Count()</strong> ca bệnh</p>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Chưa có ca bệnh nào trong hệ thống.
                </div>
            }
        </div>
    </div>
</div>
