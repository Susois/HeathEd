@model IEnumerable<HeathEdWeb.Models.Module>
@{
    ViewData["Title"] = "Danh sách Môn học";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4"><i class="bi bi-book-fill"></i> Danh sách Môn học</h1>

            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Tất cả môn học đang hoạt động</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 120px;">Mã môn</th>
                                        <th>Tên môn học</th>
                                        <th style="width: 30%;">Mô tả</th>
                                        <th style="width: 200px;">Giảng viên</th>
                                        <th style="width: 120px;">Ngày tạo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var module in Model)
                                    {
                                        <tr>
                                            <td><strong>@module.ModuleCode</strong></td>
                                            <td>@module.ModuleName</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(module.Description))
                                                {
                                                    <span>@(module.Description.Length > 50 ? module.Description.Substring(0, 50) + "..." : module.Description)</span>
                                                }
                                            </td>
                                            <td>@module.Lecturer?.FullName</td>
                                            <td>@module.CreatedDate.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer bg-light">
                            <p class="text-muted mb-0">Tổng số: <strong>@Model.Count()</strong> môn học</p>
                        </div>
                    }
                    else
                    {
                        <div class="p-4">
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> Không có môn học nào trong hệ thống.
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a href="/" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại trang chủ
                </a>
            </div>
        </div>
    </div>
</div>
