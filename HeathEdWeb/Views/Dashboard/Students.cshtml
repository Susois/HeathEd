@model IEnumerable<HeathEdWeb.Models.User>
@{
    ViewData["Title"] = "Danh sách Sinh viên";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4"><i class="bi bi-people-fill"></i> Danh sách Sinh viên</h1>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Tất cả sinh viên đang hoạt động</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 80px;">ID</th>
                                        <th style="width: 150px;">Username</th>
                                        <th>Họ và tên</th>
                                        <th>Email</th>
                                        <th style="width: 120px;">Ngày tạo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.UserID</td>
                                            <td><strong>@student.Username</strong></td>
                                            <td>@student.FullName</td>
                                            <td>@student.Email</td>
                                            <td>@student.CreatedDate.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer bg-light">
                            <p class="text-muted mb-0">Tổng số: <strong>@Model.Count()</strong> sinh viên</p>
                        </div>
                    }
                    else
                    {
                        <div class="p-4">
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> Không có sinh viên nào trong hệ thống.
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a href="/" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại trang chủ
                </a>
            </div>
        </div>
    </div>
</div>
