@model IEnumerable<Module>
@{
    ViewData["Title"] = "Quản lý Môn học";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <h1 class="mb-3 mb-md-0"><i class="bi bi-book-fill"></i> Quản lý Môn học</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Thêm môn học mới
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 100px;">Mã môn</th>
                                        <th>Tên môn học</th>
                                        <th class="d-none d-lg-table-cell" style="width: 30%;">Mô tả</th>
                                        <th style="width: 180px;">Giảng viên</th>
                                        <th class="d-none d-md-table-cell" style="width: 110px;">Ngày tạo</th>
                                        <th style="width: 140px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var module in Model)
                                    {
                                        <tr>
                                            <td><strong>@module.ModuleCode</strong></td>
                                            <td>@module.ModuleName</td>
                                            <td class="d-none d-lg-table-cell">
                                                @if (!string.IsNullOrEmpty(module.Description))
                                                {
                                                    <small>@(module.Description.Length > 50 ? module.Description.Substring(0, 50) + "..." : module.Description)</small>
                                                }
                                            </td>
                                            <td>
                                                <small>@module.Lecturer?.FullName</small>
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                <small>@module.CreatedDate.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@module.ModuleID" class="btn btn-info" title="Xem">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@module.ModuleID" class="btn btn-warning" title="Sửa">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@module.ModuleID" class="btn btn-danger" title="Xóa">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer bg-light">
                            <p class="text-muted mb-0">Tổng số: <strong>@Model.Count()</strong> môn học</p>
                        </div>
                    }
                    else
                    {
                        <div class="p-4">
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> Chưa có môn học nào trong hệ thống.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
