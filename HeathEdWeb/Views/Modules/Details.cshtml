@model Module
@{
    ViewData["Title"] = "Chi tiết Môn học";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-book"></i> Chi tiết Môn học</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ModuleID" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Thông tin môn học</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Mã môn học</dt>
                        <dd class="col-sm-8"><strong>@Model.ModuleCode</strong></dd>

                        <dt class="col-sm-4">Tên môn học</dt>
                        <dd class="col-sm-8">@Model.ModuleName</dd>

                        <dt class="col-sm-4">Mô tả</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Giảng viên</dt>
                        <dd class="col-sm-8">@Model.Lecturer?.FullName</dd>

                        <dt class="col-sm-4">Trạng thái</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã đóng</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Ngày tạo</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            @if (Model.StudentModules.Any())
            {
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sinh viên đã đăng ký (@Model.StudentModules.Count)</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var sm in Model.StudentModules.Take(10))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @sm.Student?.FullName
                                    <small class="text-muted">@sm.Student?.Username</small>
                                </li>
                            }
                        </ul>
                        @if (Model.StudentModules.Count > 10)
                        {
                            <p class="text-muted mt-2 mb-0">...và @(Model.StudentModules.Count - 10) sinh viên khác</p>
                        }
                    </div>
                </div>
            }

            @if (Model.CaseStudies.Any())
            {
                <div class="card">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">Ca bệnh (@Model.CaseStudies.Count)</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var caseStudy in Model.CaseStudies.Take(5))
                            {
                                <li class="list-group-item">
                                    <strong>@caseStudy.CaseTitle</strong>
                                    <br />
                                    <small class="text-muted">@caseStudy.CreatedDate.ToString("dd/MM/yyyy")</small>
                                </li>
                            }
                        </ul>
                        @if (Model.CaseStudies.Count > 5)
                        {
                            <p class="text-muted mt-2 mb-0">...và @(Model.CaseStudies.Count - 5) ca bệnh khác</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
