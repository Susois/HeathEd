@model IEnumerable<User>
@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <h1 class="mb-3 mb-md-0"><i class="bi bi-people-fill"></i> Quản lý Người dùng</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Thêm người dùng mới
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Filter -->
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-12 col-md-4">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100 @(string.IsNullOrEmpty(ViewBag.FilterRole) ? "active" : "")">
                                <i class="bi bi-people"></i> Tất cả
                            </a>
                        </div>
                        <div class="col-12 col-md-4">
                            <a href="@Url.Action("Index", new { role = "Student" })" class="btn btn-outline-primary w-100 @(ViewBag.FilterRole == "Student" ? "active" : "")">
                                <i class="bi bi-person"></i> Sinh viên
                            </a>
                        </div>
                        <div class="col-12 col-md-4">
                            <a href="@Url.Action("Index", new { role = "Lecturer" })" class="btn btn-outline-success w-100 @(ViewBag.FilterRole == "Lecturer" ? "active" : "")">
                                <i class="bi bi-person-badge"></i> Giảng viên
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Table -->
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 60px;">ID</th>
                                        <th style="width: 120px;">Username</th>
                                        <th>Họ và tên</th>
                                        <th class="d-none d-lg-table-cell">Email</th>
                                        <th style="width: 100px;">Vai trò</th>
                                        <th class="d-none d-md-table-cell" style="width: 110px;">Ngày tạo</th>
                                        <th style="width: 140px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.UserID</td>
                                            <td><strong>@user.Username</strong></td>
                                            <td>@user.FullName</td>
                                            <td class="d-none d-lg-table-cell">
                                                <small>@user.Email</small>
                                            </td>
                                            <td>
                                                @if (user.Role == "Student")
                                                {
                                                    <span class="badge bg-primary">SV</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">GV</span>
                                                }
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                <small>@user.CreatedDate.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@user.UserID" class="btn btn-info" title="Xem">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-warning" title="Sửa">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@user.UserID" class="btn btn-danger" title="Xóa">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer bg-light">
                            <p class="text-muted mb-0">Tổng số: <strong>@Model.Count()</strong> người dùng</p>
                        </div>
                    }
                    else
                    {
                        <div class="p-4">
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> Không có người dùng nào trong hệ thống.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
